<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="#F6F6F6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, "
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Saravana"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A73E8" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/outline_account_circle_24"
            android:layout_gravity="end" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Search a Places Here..."
            android:layout_weight="1"
            android:background="@drawable/search_bar"
            android:padding="12dp"
            android:drawableEnd="@drawable/baseline_search_24"
            android:drawablePadding="10dp"
            android:textSize="16sp" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginEnd="30dp"
                android:background="@drawable/button_aktif"
                android:text="Place"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginEnd="30dp"
                android:background="@drawable/button_inaktif"
                android:text="Culinary"
                android:textColor="#000000" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginEnd="30dp"
                android:background="@drawable/button_inaktif"
                android:text="Culture"
                android:textColor="#000000" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginEnd="30dp"
                android:background="@drawable/button_inaktif"
                android:text="Culture"
                android:textColor="#000000" />
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Travels Place"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Show more >"
                    android:textColor="#929292"
                    android:textSize="11sp" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:scrollbars="horizontal"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        android:layout_marginEnd="16dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="centerCrop"
                                android:src="@drawable/p_hogenakkal"
                                android:background="@drawable/rounded"
                                android:adjustViewBounds="true"
                                android:layout_marginBottom="16dp"
                                android:layout_marginTop="16dp"
                                android:clipToOutline="true"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hogenakkal, India"
                                    android:textSize="12sp"
                                    android:layout_gravity="start" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rp. 100.000.000"
                                        android:layout_weight="1"
                                        android:textSize="10sp"
                                        android:layout_gravity="center"/>
                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_gravity="end"
                                        android:src="@drawable/baseline_add_circle_outline_24"
                                        app:tint="#1A73E8"/>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        android:layout_marginEnd="16dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="centerCrop"
                                android:src="@drawable/p_gnbromo"
                                android:background="@drawable/rounded"
                                android:adjustViewBounds="true"
                                android:layout_marginBottom="16dp"
                                android:layout_marginTop="16dp"
                                android:clipToOutline="true"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="G.Bromo, Indonesia"
                                    android:textSize="12sp"
                                    android:layout_gravity="start" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rp. 6.000.000"
                                        android:layout_weight="1"
                                        android:textSize="10sp"
                                        android:layout_gravity="center"/>
                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_gravity="end"
                                        android:src="@drawable/baseline_add_circle_outline_24"
                                        app:tint="#1A73E8"/>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        android:layout_marginEnd="16dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="centerCrop"
                                android:src="@drawable/p_bali"
                                android:background="@drawable/rounded"
                                android:adjustViewBounds="true"
                                android:layout_marginBottom="16dp"
                                android:layout_marginTop="16dp"
                                android:clipToOutline="true"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bali, Indonesia"
                                    android:textSize="12sp"
                                    android:layout_gravity="start" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rp. 4.500.000"
                                        android:layout_weight="1"
                                        android:textSize="10sp"
                                        android:layout_gravity="center"/>
                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_gravity="end"
                                        android:src="@drawable/baseline_add_circle_outline_24"
                                        app:tint="#1A73E8"/>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Best Destination"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Show more >"
                    android:textColor="#929292"
                    android:textSize="11sp" />
            </LinearLayout>

            <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/rounded"
                    android:layout_margin="8dp"
                    android:elevation="4dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/b_yanam"
                        android:background="@drawable/rounded"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yanam, India"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:gravity="bottom"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="★ 5.6"
                            android:textColor="#FF9800"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="4"/>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/circle_gray"
                                android:contentDescription="Rating" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="15dp"
                                android:src="@drawable/circle_gray"
                                android:contentDescription="Rating" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="30dp"
                                android:src="@drawable/circle_gray"
                                android:contentDescription="Rating" />

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="45dp"
                                android:gravity="center"
                                android:text="12+"
                                android:textSize="8sp"
                                android:background="@drawable/circle_blue"
                                android:padding="4dp"
                                android:textColor="#FFFFFF" />
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/rounded"
                    android:layout_margin="8dp"
                    android:elevation="4dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/b_trevi"
                        android:background="@drawable/rounded"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trevi Fountain, Itali"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:gravity="bottom"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="★ 4.8"
                            android:textColor="#FF9800"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="4"/>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/circle_gray"
                                android:contentDescription="Rating" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="15dp"
                                android:src="@drawable/circle_gray"
                                android:contentDescription="Rating" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="30dp"
                                android:src="@drawable/circle_gray"
                                android:contentDescription="Rating" />

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="45dp"
                                android:gravity="center"
                                android:text="12+"
                                android:textSize="8sp"
                                android:background="@drawable/circle_blue"
                                android:padding="4dp"
                                android:textColor="#FFFFFF" />
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:padding="0dp"
        android:background="@drawable/rounded_up">
        <Button
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_sticky_note_2_24"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_map_24"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_heart_broken_24"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_marginEnd="25dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/outline_account_circle_24"
            android:background="@android:color/transparent" />

    </LinearLayout>

</LinearLayout>